datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Restaurant {
  address   String   @unique
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String   @unique
  phone     String   @unique
  updatedAt DateTime @updatedAt
  zipCode   String   @unique
}
